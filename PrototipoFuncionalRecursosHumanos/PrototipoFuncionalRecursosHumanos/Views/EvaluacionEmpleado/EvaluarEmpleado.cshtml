@model PrototipoFuncionalRecursosHumanos.Models.Evaluacion

@{
    ViewData["Title"] = "Evaluar empleado";
}

<h2 class="text-center mb-3">Evaluacion del empleado: @Model.Colaborador.Persona.Nombre @Model.Colaborador.Persona.Apellido1 @Model.Colaborador.Persona.Apellido2</h2>

<form asp-action="EvaluarEmpleado" asp-controller="EvaluacionEmpleado" method="post">
    <div class="table-responsive mt-2">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Pregunta</th>
                    <th scope="col">Totalmente en desacuerdo</th>
                    <th scope="col">En desacuerdo</th>
                    <th scope="col">Neutral</th>
                    <th scope="col">De acuerdo</th>
                    <th scope="col">Totalmente de acuerdo</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Preguntas.Count; i++)
                {
                    <tr>
                        <th scope="row">@Model.Preguntas[i].Texto</th>
                        <td><input type="radio" name="Preguntas[@i].Respuesta" value="0" @(Model.Preguntas[i].Respuesta == 0 ? "checked" : "")></td>
                        <td><input type="radio" name="Preguntas[@i].Respuesta" value="1" @(Model.Preguntas[i].Respuesta == 1 ? "checked" : "")></td>
                        <td><input type="radio" name="Preguntas[@i].Respuesta" value="2" @(Model.Preguntas[i].Respuesta == 2 ? "checked" : "")></td>
                        <td><input type="radio" name="Preguntas[@i].Respuesta" value="3" @(Model.Preguntas[i].Respuesta == 3 ? "checked" : "")></td>
                        <td><input type="radio" name="Preguntas[@i].Respuesta" value="4" @(Model.Preguntas[i].Respuesta == 4 ? "checked" : "")></td>
                        <input type="hidden" name="Preguntas.Index" value="@i" />
                    </tr>
                }
            </tbody>
        </table>
        <input type="hidden" name="Colaborador.IdColaborador" value="@Model.Colaborador.IdColaborador" />
        <span asp-validation-for="Preguntas" class="text-danger"></span>
        <input type="submit" value="Evaluar" class="d-block w-100 mx-auto btn btn-primary mt-4" />
    </div>
</form>
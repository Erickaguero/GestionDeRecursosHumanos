                                    <td>
                                        <a href="@Url.Action("AprobarIncapacidad", "GestionIncapacidades", new { idIncapacidad = incapacidad.IdIncapacidad, tipoIncapacidad = incapacidad.TipoIncapacidad.Descripcion })" class="btn btn-success">Aprobar</a>
                                        <a href="@Url.Action("RechazarIncapacidad", "GestionIncapacidades", new { idIncapacidad = incapacidad.IdIncapacidad })" class="btn btn-danger">Rechazar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
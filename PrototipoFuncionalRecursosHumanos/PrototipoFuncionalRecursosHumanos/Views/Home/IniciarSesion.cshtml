@model PrototipoFuncionalRecursosHumanos.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = "~/Views/Shared/_Layout_Without_Header_And_Footer.cshtml";
}

<div class="container">
    <div>
        <div class="mt-5">
            <h2 class="text-center">Iniciar sesión</h2>
            <form asp-action="IniciarSesion" asp-controller="Home" class="mt-3">
                <div class="form-group">
                    <label asp-for="Correo">Correo</label>
                    <input asp-for="Correo" type="text" class="form-control" placeholder="Introduce tu correo">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Contrasena">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="Introduce tu contraseña">
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <a asp-action="RecuperarContrasena" asp-controller="Home">¿Olvidaste tu contraseña?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4 mx-auto">Iniciar sesión</button>
            </form>
        </div>
    </div>
</div>
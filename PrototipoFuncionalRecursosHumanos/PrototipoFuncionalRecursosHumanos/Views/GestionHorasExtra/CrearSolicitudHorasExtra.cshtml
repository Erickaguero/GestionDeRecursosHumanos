@model PrototipoFuncionalRecursosHumanos.Models.HorasExtra

@{
    ViewData["Title"] = "Crear solicitud de horas extra";
}

<h2 class="text-center mb-3">Crear solicitud de horas extra</h2>

<form asp-action="CrearSolicitudHorasExtra" asp-controller="GestionHorasExtra" method="post">
    <div class="mt-5">
        <div class="form-group">
            <label asp-for="FechaHorasExtra" class="control-label">Fecha de las horas extra</label>
            <input asp-for="FechaHorasExtra" class="form-control" type="date" />
            <span asp-validation-for="FechaHorasExtra" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Horas" class="control-label">Cantidad horas extra </label>
            <input asp-for="Horas" class="form-control" type="number" min="1" step="1" />
            <span asp-validation-for="Horas" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="floatingTextarea">Justificacion</label>
            <textarea asp-for="Justificacion" class="form-control" placeholder="Escribe tu justificacion" id="floatingTextarea"></textarea>
            <span asp-validation-for="Justificacion" class="text-danger"></span>
        </div>

    </div>

    <input type="submit" value="Solicitar" class="d-block mx-auto btn btn-primary mt-4" />
</form>
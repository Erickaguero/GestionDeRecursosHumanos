@model PrototipoFuncionalRecursosHumanos.Models.Puesto

@{
    ViewData["Title"] = "Crear Puesto";
}

<div class="container">
    <div>
        <div class="mt-5">
            <h2 class="text-center">Crear Puesto</h2>
            <form asp-action="CrearPuesto" asp-controller="MantenimientoPuestos" method="post">
                <div class="form-group">
                    <label asp-for="NombrePuesto">Nombre puesto</label>
                    <input asp-for="NombrePuesto" class="form-control" placeholder="Introduce el nombre del puesto">
                    <span asp-validation-for="NombrePuesto" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CostoPorHora">Costo por hora</label>
                    <input asp-for="CostoPorHora" class="form-control">
                    <span asp-validation-for="CostoPorHora" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4 mx-auto">Crear Puesto</button>
            </form>
        </div>
    </div>
</div>
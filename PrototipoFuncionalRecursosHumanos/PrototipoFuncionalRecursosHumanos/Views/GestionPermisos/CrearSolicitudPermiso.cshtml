@model PrototipoFuncionalRecursosHumanos.Models.Permisos

@{
    ViewData["Title"] = "Crear solicitud de permiso";
}

<h2 class="text-center mb-3">Crear solicitud de permiso</h2>

<form asp-action="CrearSolicitudPermiso" asp-controller="GestionPermisos" method="post">
    <div class="mt-5">
        <div class="form-group">
            <label asp-for="FechaPermiso" class="control-label">Fecha del permiso</label>
            <input asp-for="FechaPermiso" class="form-control" type="date" />
            <span asp-validation-for="FechaPermiso" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Horas" class="control-label">Cantidad horas permiso (maximo 2): </label>
            <input asp-for="Horas" class="form-control" type="number" min="1" max="2" step="1" />
            <span asp-validation-for="Horas" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="floatingTextarea">Justificacion</label>
            <textarea asp-for="Justificacion" class="form-control" placeholder="Escribe tu justificacion" id="floatingTextarea"></textarea>
            <span asp-validation-for="Justificacion" class="text-danger"></span>
        </div>

    </div>

    <input type="submit" value="Solicitar" class="d-block mx-auto btn btn-primary mt-4" />
</form>